{
	"name": "visualcucumbersteppicker",
	"displayName": "VisualCucumberStepPicker",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.vcsp",
		"onView:vcspTree"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vcsp",
				"title": "vcsp"
			},
			{
				"command": "vcspTree.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "vcspTree.addEntry",
				"title": "Add"
			},
			{
				"command": "vcspTree.stepsDir",
				"title": "Stepsdirectory"
			},
			{
				"command": "vcspTree.writeStep",
				"title": "Write to file.",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "vcspTree",
					"name": "VCSP List"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vcspTree.refreshEntry",
					"when": "view == vcspTree",
					"group": "navigation"
				},
				{
					"command": "vcspTree.addEntry",
					"when": "view == vcspTree"
				},
				{
					"command": "vcspTree.stepsDir",
					"when": "view == vcspTree"
				}
			],
			"view/item/context": [
				{
					"command": "vcspTree.writeStep",
					"when": "view == vcspTree && viewItem == cucumberStep",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
